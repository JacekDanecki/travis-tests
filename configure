#!/bin/bash

echo "BUILD_OS=${BUILD_OS}"

echo "checking compilers"
if [ -n "${CC}" ]
then
	echo "CC: ${CC}"
	${CC} --version
else
	gcc --version
	clang --version
fi

if [ -n "${CXX}" ]
then
	echo "CXX: ${CXX}"
	${CXX} --version
else
	g++ --version
	clang++ --version
fi

echo "checking OS"
cat /etc/issue
if [ -f /etc/debian_version ]
then
		cat /etc/debian_version
fi

lsb_release -a
uname -a

echo "checking CPU"
lscpu

echo "checking sudo"
if [ "${CODESHIP}" = "TRUE" ]
then
	echo "don't test sudo on CODESHIP"
else
	sudo whoami
fi

echo "checking docker"
docker info

echo "checking memory"
free

echo "checking disk space"
df -h

echo "environment variables"
set

echo "check ccache"
ccache --version
